@model ContatoModel;
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    
   
    <br/>
    <h1 class="display-4">Editar contato</h1>

    
</div>
<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control"   placeholder="Digite seu nome">
         @Html.ValidationMessageFor(x => x.Nome);
    </div>
    
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control"   placeholder="Digite seu e-mail">
         @Html.ValidationMessageFor(x => x.Email);
    </div>
    
    <div class="form-group">
        <label for="phone">Celular</label>
        <input type="text" asp-for="Celular" class="form-control"   placeholder="Digite seu celular">
         @Html.ValidationMessageFor(x => x.Celular);
    </div>

    
    
    <button type="submit" class="btn btn-primary btn-block" >Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>